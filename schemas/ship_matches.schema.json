{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ship_matches.schema.json",
  "title": "Ship Point Matches over Frames",
  "type": "object",
  "properties": {
    "video": {"type": "string"},
    "fps": {"type": "number"},
    "frame_step": {"type": "integer"},
    "frames": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "frame_index": {"type": "integer"},
          "image_size": {
            "type": "object",
            "properties": {"width": {"type": "integer"}, "height": {"type": "integer"}},
            "required": ["width", "height"]
          },
          "observations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "point_id": {"type": ["string", "number"]},
                "u": {"type": "integer"},
                "v": {"type": "integer"}
              },
              "required": ["point_id", "u", "v"]
            }
          }
        },
        "required": ["frame_index", "image_size", "observations"]
      }
    }
  },
  "required": ["frames"]
}

