{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ship_points.schema.json",
  "title": "Ship Points (ship-local coordinates)",
  "type": "object",
  "properties": {
    "coordinate_system": {
      "type": "object",
      "properties": {
        "description": {"type": "string"}
      }
    },
    "points": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": ["string", "number"]},
          "x": {"type": "number"},
          "y": {"type": "number"},
          "z": {"type": "number"},
          "name": {"type": "string"}
        },
        "required": ["id", "x", "y", "z"]
      },
      "minItems": 2
    }
  },
  "required": ["points"]
}

