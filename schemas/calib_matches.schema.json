{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "calib_matches.schema.json",
  "title": "Calibration Matches",
  "type": "object",
  "properties": {
    "video": {"type": "string"},
    "frame_index": {"type": "integer"},
    "image_size": {
      "type": "object",
      "properties": {
        "width": {"type": "integer"},
        "height": {"type": "integer"}
      },
      "required": ["width", "height"]
    },
    "matches": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "point_id": {"type": ["string", "number"]},
          "u": {"type": "integer"},
          "v": {"type": "integer"}
        },
        "required": ["point_id", "u", "v"]
      }
    }
  },
  "required": ["frame_index", "image_size", "matches"]
}

